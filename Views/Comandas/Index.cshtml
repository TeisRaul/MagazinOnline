@model IEnumerable<Magazin_Online.Models.Comanda>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NrComanda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrBuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataComanda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StareComanda)
            </th>
