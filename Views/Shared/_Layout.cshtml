@using Microsoft.AspNetCore.Http
@{
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var userName = User.Identity?.Name;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Magazin_Online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (isAuthenticated)
                {
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav flex-grow-1 align-items-center">
                            <li class="nav-item">
                                <a class="nav-link font-weight-bold text-dark h4" asp-area="" asp-controller="Product" asp-action="Index">MagazinOnline</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Acasa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Salut, @userName
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Edit">Profilul meu</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Order" asp-action="MyOrders">Comenzile mele</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="MyProducts">Produsele mele</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="ShoppingCart">
                                    <i class="bi bi-cart-fill"></i> Coș
                                    <span id="cartItemCount" class="badge bg-primary"></span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="AddProduct">Adaugă Produs</a>
                            </li>
                            <li class="nav-item">
                                <form id="logoutForm" method="post" asp-area="" asp-controller="Account" asp-action="Logout" class="form-inline">
                                    <button type="submit" class="btn btn-danger btn-block">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Magazin_Online - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <div id="cartIcon" style="position: fixed; bottom: 20px; right: 20px;">
        <a href="#" id="cartIconLink">
            <i class="bi bi-cart-fill" style="font-size: 2rem;"></i>
            <span id="cartItemCount" class="badge bg-primary"></span>
        </a>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    $(document).ready(function () {
        updateCartItemCount();
    });

    $('.add-to-cart-button').on('click', function (event) {
        event.preventDefault();
        var formId = $(this).closest('form').attr('id');
        var productId = $(this).data('product-id');
        var quantityInput = $('#quantity-' + productId);
        var quantityError = $('#quantityError-' + productId);

        if (parseInt(quantityInput.val()) > parseInt(quantityInput.attr('max'))) {
            quantityError.show();
            return;
        }

        quantityError.hide();
        $.ajax({
            type: 'POST',
            url: $('#' + formId).attr('action'),
            data: $('#' + formId).serialize(),
            success: function (response) {
                if (response.success) {
                    updateCartItemCount(response.cartItemCount);
                    alert("Produsul a fost adăugat în coș."); // Afișăm un mesaj de confirmare
                } else {
                    alert("A apărut o eroare: " + response.message);
                }
            },
            error: function (xhr, textStatus, errorThrown) {
                alert("A apărut o eroare: " + xhr.responseText);
            }
        });
    });

    function updateCartItemCount(cartItemCount) {
        $('#cartItemCount').text(cartItemCount);
    }
</script>

