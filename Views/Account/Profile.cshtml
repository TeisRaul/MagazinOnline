@model Magazin_Online.Models.Utilizator

@{
    ViewData["Title"] = "Profil";
}

<h1>@ViewData["Title"]</h1>

<div class="navbar navbar-expand-sm navbar-light bg-light">
    <div class="container-fluid">
        <ul class="navbar-nav me-auto mb-2 mb-sm-0">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Profile">Datele mele</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Product" asp-action="Index">Produsele mele</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Order" asp-action="Index">Comenzile mele</a>
            </li>
        </ul>
    </div>
</div>

<div>
    <p>Nume: @Model.Nume</p>
    <p>Prenume: @Model.Prenume</p>
    <p>Email: @Model.Email</p>
    <p>Adresa: @Model.Adresa</p>
    <p>Oras: @Model.Oras</p>
    <p>Telefon: @Model.Telefon</p>
</div>
