@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Nume">Nume:</label>
        <input type="text" class="form-control" id="Nume" name="Nume" value="@Model.Nume" required>
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Nume)</span>
    </div>

    <div class="form-group">
        <label for="Prenume">Prenume:</label>
        <input type="text" class="form-control" id="Prenume" name="Prenume" value="@Model.Prenume" required>
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Prenume)</span>
    </div>

    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required>
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
    </div>

    <div class="form-group">
        <label for="Parola">Parola:</label>
        <input type="password" class="form-control" id="Parola" name="Parola" value="@Model.Parola" required>
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Parola)</span>
    </div>

    <div class="form-group">
        <label for="Adresa">Adresa:</label>
        <input type="text" class="form-control" id="Adresa" name="Adresa" value="@Model.Adresa" required>
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Adresa)</span>
    </div>

    <div class="form-group">
        <label for="Oras">Oras:</label>
        <select class="form-control" id="Oras" name="Oras" required>
            <option value="">Selectează orașul</option>
            @foreach (var oras in Enum.GetValues(typeof(Orase)))
            {
                <option value="@((int)oras)">@oras</option>
            }
        </select>
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Oras)</span>
    </div>

    <div class="form-group">
        <label for="Telefon">Telefon:</label>
        <input type="text" class="form-control" id="Telefon" name="Telefon" value="@Model.Telefon" required>
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Telefon)</span>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
