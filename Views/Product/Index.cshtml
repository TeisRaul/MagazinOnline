@model IEnumerable<Produs>
@{
    ViewData["Title"] = "Produse";
}

<div class="row">
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-info">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        @item.Denumire
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                        }
                                    </h5>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <img src="@item.Imagine" width="100%" alt="@item.Denumire">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p class="card-text">@item.Descriere</p>
                                <p class="card-text"><b>Utilizator </b>@item.Utilizator.Nume</p>
                                <p class="card-text"><b>Categorie: </b>@item.Categorie</p>
                                <p class="card-text"><b>Localitate: </b>@item.Localitate</p>
                                <p class="card-text ">
                                    <b>Status: </b>
                                    @if (item.Nr_buc >= 0)
                                    {
                                        <span class="badge bg-success text-white">VALABIL</span>
                                    }
                                    else if (item.Nr_buc == 0)
                                    {
                                        <span class="badge bg-danger text-white">NU MAI ESTE PE STOCK</span>
                                    }
                                </p>

                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer ">
                                <p class="card-text">
                                    <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-eye-fill"></i> Detalii
                                    </a>
                                    <a class="btn btn-success text-white"
                                       asp-controller="Orders"
                                       asp-action="AddItemToShoppingCart"
                                       asp-route-id="@item.Id">
                                        <i class="bi bi-cart-plus"></i> Adauga in cos (@item.Pret.ToString("c") RON)
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No data available</p>
    }
</div>

@await Html.PartialAsync("_CreateItem", "Movies")
